<!DOCTYPE html>
<html>
<head>
  <title>View Contacts</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
    <style>
        /* Custom CSS styles */
        .card-container {
          display: flex;
          justify-content: space-between;
        }
    
        .card {
          width: 30%;
          margin-bottom: 20px;
        }
    
        .image {
          width: 100%;
          height: auto;
          margin-bottom: 10px;
        }
      </style>
</head>
<body>
    <h1 class="w3-center w3-cursive">Contacts</h1>
  <div class="w3-container card-container w3-cursive">
    <% contacts.forEach (contact =>{ %>
    <div class="w3-card-4 card" style="width:20%">
        <img class="w3-round w3-opacity w3-hover-opacity-off" src=<%-contact.Image %> alt="Alps" style="width:100%">
        <div class="w3-container w3-center">
            <p><%-contact.firstName %> <%-contact.lastName %></p>
            <a href="/single/<%-contact.id%>"> Visit The Contact</a>
        </div>
    </div>
    <% }) %>
    <a href="/addContact"><button  class="w3-button w3-circle w3-black w3-display-bottomright">+</button></a>
  </div>
</body>
</html>
