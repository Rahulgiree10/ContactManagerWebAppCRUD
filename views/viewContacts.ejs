<!DOCTYPE html>
<html>
<head>
  <title>View Contacts</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
  <style>
    /* Custom CSS styles */
    .card-container {
      max-height: 555px; /* Set the maximum height of the card container */
      overflow-y: auto; /* Enable vertical scrollbar */
    }

    .card-container-inner {
      display: flex;
      flex-wrap: wrap;
      justify-content: space-between;
      padding: 10px; /* Add some padding to the inner container */
    }

    .card {
      width: calc(33.33% - 20px);
      margin-bottom: 20px;
    }

    .image {
      width: 100%;
      height: auto;
      margin-bottom: 10px;
    }

    .colour{
      color: #4CAF50;
    }
    
    .colour2{
      color: #00d6c4;
    }
    .center {
      border: 5px solid;
      text-align: center;
    }
  </style>
</head>
<body class="w3-black">
  <div class="w3-container w3-grey w3-center w3-allerta">
  <h1 class="w3-center w3-cursive w3-xxlarge">Contacts</h1>
  </div>
  <div class="w3-container card-container w3-cursive w3-panel w3-black w3-card-4">
    <div class="card-container-inner">
      <% contacts.forEach (contact =>{ %>
      <div class="w3-card-4 card w3-black center">
          <img class="w3-round w3-opacity w3-hover-opacity-off" src=<%-contact.Image %> alt="Alps" style="width:100%">
          <div class="w3-container w3-center">
              <p><%-contact.firstName %> <%-contact.lastName %></p>
              <a href="/single/<%-contact.id%>"> Visit The Contact</a>
          </div>
      </div>
      <% }) %>
    </div>
  </div>
  <a href="/email"><button class="w3-button w3-xlarge w3-grey w3-display-bottomleftt">Send Email</button></a>
  <a href="/addContact"><button class="w3-button w3-xlarge w3-grey w3-display-bottomright">Add Contacts</button></a>
</body>
</html>